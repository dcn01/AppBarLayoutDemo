<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_entry"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.frank.supportdesigndemo.appbarlayout.EntryActivity">
    <Button
        android:id="@+id/btn_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="测试 scroll"/>
    <Button
        android:id="@+id/btn_exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="测试 exit_until_collapsed"/>
    <Button
        android:id="@+id/btn_enter_always"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="测试 scroll_enter_always"/>
    <Button
        android:id="@+id/btn_enter_collapsed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="测试 scroll_enter_always_collapsed"/>
    <Button
        android:id="@+id/btn_snap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="测试 snap"/>
    <Button
        android:id="@+id/btn_collapseing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="测试 CollapsingToolbar"/>
    <Button
        android:id="@+id/btn_offset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="测试 OffsetListener"/>
</LinearLayout>
